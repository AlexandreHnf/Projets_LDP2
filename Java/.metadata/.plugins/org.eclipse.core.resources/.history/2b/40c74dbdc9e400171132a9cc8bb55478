public class Prod implements Runnable {
	
	private vect0 v1; //vecteur result
	private vect0 v2; //L'autre vecteur Ã  additionner
	private int inf;
	private int sup;
	public int res;
	
	public Prod(vect0 v1, vect0 v2, int inf, int sup, int res) {
		this.v1 = v1;
		this.v2 = v2; 
		this.inf = inf;
		this.sup = sup;
		this.res = res;
	}
	
	public void run() {
		//int tmp;
		for (int i=inf; i < sup; ++i) {
			System.out.println("dans le thread");
			res += v1.get_elem(i) * v2.get_elem(i);
			//System.out.print("tmp: ");
			//System.out.println(tmp);
			//v1.set_elem(i, tmp);
		}
		System.out.println(res);
	}
}